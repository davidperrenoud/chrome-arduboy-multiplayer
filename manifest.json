{
  "name": "Arduboy Multiplayer",
  "version": "0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "description": "Connect Arduboys together by sending their serial data to one another.",

  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },

  "icons": {
    "128": "icon_128.png"
  },

  "permissions": [
    "serial"
  ]
}
